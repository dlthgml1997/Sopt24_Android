<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLightBlue"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_toLeftOf="@+id/img_main_activity_setting"
                    android:id="@+id/img_main_activity_bell"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_bell_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            <ImageView
                    android:id="@+id/img_main_activity_setting"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="24dp"
                    android:src="@drawable/icon_setting_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
        </RelativeLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="5월 11일 (토)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="38dp"
                        android:layout_marginBottom="7dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryBlack"/>
                <LinearLayout
                        android:layout_marginHorizontal="18dp"
                        android:paddingHorizontal="19dp"
                        android:orientation="vertical"
                        android:paddingVertical="17dp"
                        android:background="@drawable/blue_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/time1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10:00"
                                android:textColor="#ffffff"
                                android:textSize="12sp"/>

                        <TextView
                                android:id="@+id/class1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="서양사의 이해"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:layout_marginLeft="19dp"
                                android:layout_toRightOf="@id/time1"/>

                        <TextView
                                android:id="@+id/place1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="C817"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:layout_alignParentRight="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#0fffffff"
                            android:layout_marginTop="5.5dp">

                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8.5dp">

                        <TextView
                                android:id="@+id/time2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="14:00"
                                android:textColor="#ffffff"
                                android:textSize="12sp"/>

                        <TextView
                                android:id="@+id/class2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="대학생을 위한 실용금융"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:layout_marginLeft="19dp"
                                android:layout_toRightOf="@id/time2"/>

                        <TextView
                                android:id="@+id/place2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="C817"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:layout_alignParentRight="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#0fffffff"
                            android:layout_marginTop="5.5dp">

                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8.5dp">

                        <TextView
                                android:id="@+id/time3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15:00"
                                android:textColor="#ffffff"
                                android:textSize="12sp"/>

                        <TextView
                                android:id="@+id/class3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="피지컬워크샵(1)"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:layout_marginLeft="19dp"
                                android:layout_toRightOf="@id/time3"/>

                        <TextView
                                android:id="@+id/place3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="C817"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:layout_alignParentRight="true"/>

                    </RelativeLayout>
                </LinearLayout>
                <ImageView
                        android:src="@drawable/down_img"
                        android:layout_marginTop="-15.5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="61dp"
                           android:layout_height="43dp"/>
                <LinearLayout
                        android:layout_marginHorizontal="18dp"
                        android:paddingHorizontal="19dp"
                        android:orientation="vertical"
                        android:paddingVertical="17dp"
                        android:visibility="gone"
                        android:background="@drawable/blue_border_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="시간표"
                            android:gravity="center"
                            android:background="@color/colorPrimaryLightBlue"
                            android:layout_width="match_parent"
                            android:layout_height="380dp"/>
                </LinearLayout>
                <TextView
                        android:text="Menu"
                        android:layout_marginLeft="38dp"
                        android:layout_marginBottom="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryBlack"
                        android:textSize="12sp"/>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_item_main_activity_menu"
                        android:layout_marginHorizontal="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <ImageView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_user_img"
            android:layout_width="78dp"
            android:layout_height="78dp"/>
</RelativeLayout>